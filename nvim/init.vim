set belloff=all

set nocompatible
set nobackup
set showmode

set scrolloff=10
set cursorline
set cursorcolumn
highlight CursorColumn ctermbg=magenta guibg=#800080
set nowrap
set autoindent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

set mouse=a
set number

set hlsearch
set incsearch
set ignorecase

filetype on
filetype plugin on
filetype indent on
syntax on

colorscheme default
set background=dark

